<div class="flex-container">
    <div class="div-10" style="box-shadow: 0.1em  0.1em 0.1em 0.1em rgba(0,0,0,0.1);">
        <div class="div-11">
            <div class="div-12">
                <div class="div-13">
                    <div class="div-14">
                        <div class="div-15">
                            <picture>
                                <source srcset="
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=100   100w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=200   200w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=400   400w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=800   800w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=1200 1200w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=1600 1600w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?format=webp&width=2000 2000w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20
                "
                                        type="image/webp" />
                                <img src="https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20"
                                     style="align-self: center;"
                                     srcset="
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=100   100w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=200   200w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=400   400w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=800   800w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=1200 1200w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=1600 1600w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20?width=2000 2000w,
                  https://cdn.builder.io/api/v1/image/assets%2FTEMP%2Fbe74d2b454354c139ec2de1f253bef20
                "
                                     class="image" />
                            </picture>
                            <div class="builder-image-sizer image-sizer"></div>
                        </div>

                    </div>
                    <a class="product-price" style="margin-right: 150px; text-decoration: none">Su & İçecek</a>
                </div>

            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="flex-product-container">
        @foreach (var product in Model)
        {

            <div class="product-wrapper bg-white" style="padding-bottom: 5px; margin-bottom: 5px; ">
                <a class="plus" asp-action="Details" asp-route-productId="@product.Id">
                    <div class="plus-icon-shadow">
                        <div class="plus-icon-wrapper">
                            <div class="plus-icon">
                                <svg data-testid="icon" name="plus" size="3" color="currentColor" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="-8 -8 48 48" class="style__Icon-sc-__sc-hqksj3-1 hORzfG"><path d="M16 32c1.1 0 2-0.9 2-2v-12h12c1.1 0 2-0.9 2-2s-0.9-2-2-2h-12v-12c0-1.1-0.9-2-2-2s-2 0.9-2 2v12h-12c-1.1 0-2 0.9-2 2s0.9 2 2 2h12v12c0 1.1 0.9 2 2 2z" class="style__Path-sc-__sc-hqksj3-2 lcjQMU"></path></svg>
                            </div>
                        </div>
                    </div>
                </a>
                <div class="payment-fee" style="align-items: center; justify-content: center; justify-items: center">

                    <img src="@product.Image"
                     style="max-height: 120px; max-width: 120px;" />

                    <div class="builder-image-sizer image-sizer"></div>
                </div>

                <div class="product-price" style="align-self: center; text-decoration: none">₺@product.Price</div>
            
                <div class="product-name" style="align-self: center; text-decoration: none">@product.Name</div>

            </div>

        }


    </div>

    <!-- Cart -->

    <div class="cart-box">
        <div class="cart-text">Sepetim</div>
        <div class="cart">
          
        </div>
        <div class="cart-empty-text">Sepetiniz şu an boş</div>
        <div class="product-add-warning">
            Sipariş vermek için sepetinize ürün ekleyin
        </div>
    </div>
    <!-- Cart Style-->
    <style>

        .cart-text {
            max-width: 55px;
            color: rgba(25, 25, 25, 1);
            font-size: 14px;
            line-height: 20px;
            letter-spacing: 0%;
            text-align: left;
            font-family: Open Sans, sans-serif;
        }

        .cart {
            display: flex;
            max-width: 300px;
            height: 348px;
            width: 300px;
            border-radius: 8px;
            box-shadow: 0px 6px 24px 0px rgba(93, 62, 188, 0.03999999910593033);
            border-color: rgba(255, 211, 0, 1);
            border-width: 2px;
            border-style: solid;
            background-color: rgba(255, 255, 255, 1);
        }

        .cart-empty-text {
            max-width: 148px;
            color: rgba(93, 62, 188, 1);
            font-size: 16px;
            line-height: 16px;
            letter-spacing: 0%;
            text-align: left;
            font-family: Open Sans, sans-serif;
        }

        .product-add-warning {
            max-width: 227px;
            color: rgba(105, 116, 136, 1);
            font-size: 14px;
            line-height: 16px;
            letter-spacing: 0%;
            text-align: center;
            font-family: Open Sans, sans-serif;
        }
    </style>
    <!-- Main Style -->
    <style>
        .product-wrapper {
            display: flex;
            flex-direction: column;
            width: 100px;
            height: 250px;
            justify-content: center;
            flex-wrap: wrap;
            flex-basis: 20%;
            margin-right: 1%;
            border-style: solid;
            border-color: rgba(1,1,1,0.05);
            border-width: 0.01em;
            align-items: center;
        }

        .plus {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            background-color: rgba(255, 255, 255, 1);
            align-self: flex-end;
            margin-left: 50%;
        }

        .plus-icon-shadow {
            display: flex;
            flex-direction: column;
            max-width: 54px;
            justify-content: flex-start;
            align-items: flex-start;
            border-radius: 8px;
            box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.10000000149011612);
            padding-top: 3px;
            padding-bottom: 3px;
            padding-right: 3px;
            padding-left: 3px;
            border-color: rgba(0, 0, 0, 0.07999999821186066);
            border-width: 1px;
            border-style: solid;
            margin-left: auto;
        }

        .plus-icon-wrapper {
            display: flex;
            flex-direction: row;
            max-width: 48px;
            justify-content: flex-start;
            align-items: flex-start;
            padding-top: 4px;
            padding-bottom: 10px;
            padding-right: 10px;
            padding-left: 8px;
        }

        .plus-icon {
            display: flex;
            flex-direction: column;
            position: relative;
            margin-left: 2px;
            width: 100%;
            min-height: 20px;
            min-width: 20px;
            overflow: hidden;
            margin-right: auto;
            margin-top: 5px;
            margin-bottom: 0px;
        }

        .image {
            object-fit: cover;
            object-position: center;
            position: absolute;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            align-self: center;
        }

        .image-sizer {
            width: 100%;
            padding-top: 100%;
            pointer-events: none;
            font-size: 0;
            align-self: center;
        }

        .payment-fee {
            display: flex;
            position: relative;
            min-width: 20px;
            min-height: 20px;
            max-width: 120px;
            width: 120px;
            margin-bottom: 18px;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }

        .product-price {
            max-width: 44px;
            color: rgba(93, 62, 188, 1);
            font-size: 13px;
            line-height: 18px;
            letter-spacing: 2%;
            text-align: center;
            font-family: Open Sans, sans-serif;
        }

        .product-name {
            max-width: 87px;
            color: rgba(25, 25, 25, 1);
            font-size: 14px;
            line-height: 18px;
            letter-spacing: 0%;
            text-align: center;
            font-family: Open Sans, sans-serif;
        }
    </style>
    <!-- Categories Style-->
    <style>


        .div-11 {
            display: flex;
            flex-direction: row;
            max-width: 934px;
            justify-content: flex-start;
            align-items: flex-start;
        }

        .div-12 {
            display: flex;
            max-width: 240px;
            height: 584px;
            width: 240px;
            border-radius: 8px;
            box-shadow: 0px 6px 24px 0px rgba(93, 62, 188, 0.03999999910593033);
        }

        .div-13 {
            display: flex;
            max-width: 240px;
            height: 40px;
            width: 240px;
