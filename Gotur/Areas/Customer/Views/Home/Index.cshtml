@model IEnumerable<Product>

<script src="https://cdn.builder.io/js/webcomponents"></script>
<builder-component model="page" api-key="YOUR_API_KEY"></builder-component>

<!--Flexbox Styles-->
<style>
    .flex-container {
        display: flex;
        justify-content: center;
        align-content: center;
        flex-direction: row;
        margin-top: 5%;
    }

    .flex-product-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        flex-grow: 1;
        height: 100%;
        margin-right: 2%;
    }

    .cart-box {
        display: flex;
        flex-direction: column;
        max-width: 300px;
        justify-content: flex-start;
        align-items: center;
    }

    .div-10 {
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        margin-right: 2%;
        height: 100%;
    }
</style>

<!-- TODO: Add Search Box -->
<!-- Categories -->
