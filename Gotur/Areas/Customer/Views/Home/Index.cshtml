            border-color: rgba(25, 25, 25, 0.10000000149011612);
            border-width: 1px;
            border-style: solid;
            padding-top: 0px;
            margin-top: auto;
            margin-bottom: auto;
            margin-right: auto;
            margin-left: 7px;
        }

        .div-15 {
            display: flex;
            position: relative;
            min-width: 20px;
            min-height: 20px;
            max-width: 30px;
            width: 30px;
        }

        .image {
            object-fit: cover;
            object-position: center;
            position: absolute;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
        }

        .image-sizer {
            width: 100%;
