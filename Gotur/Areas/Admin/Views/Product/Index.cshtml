@using Gotur.Data.Repository
@model IEnumerable<Product>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Ürünler</h2>

        </div>

        <div class="col-6">
            <a asp-controller="Product" asp-action="Crup" class="btn btn-primary">
                <span>Oluştur</span>
            </a><br />
        </div>
    </div>
    <div class="row">



        <table class="table table-bordered table-striped m-2">
            <thead>
            <tr>
                <th>Fotoğraf</th>
                <th>İsim</th>
                <th>Fiyat</th>
                <th>Kategori</th>
                <th>Açıklama</th>
                <th>Resim</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><img src="@product.Image" width="100px" height="100px"/></td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Category</td>
                    <td>@product.Description.Substring(0, 20)</td>
                    <td>@product.Image</td>
                    <td>
                        
                        <a asp-controller="Product" asp-action="Crup" asp-route-id="@product.Id" class="btn btn-secondary">
                            <span>Güncelle</span>
                        </a>
                        |
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                            <span>Sil</span>
                        </a>

                    </td>

                </tr>
            }    

            </tbody>
        </table>
    </div> 
</div>