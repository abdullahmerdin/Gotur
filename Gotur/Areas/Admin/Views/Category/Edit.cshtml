@model Category

<form method="POST">
    <h2>Kategoriyi Güncelle</h2>
    
    <div class="row">
        
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary col-3 m-1">
            Güncelle
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary col-3 m-1">
            <span> Geri Dön</span>
        </a>
    </div>
</form>